<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Food Diary"
        android:textAlignment="center"
        android:textSize="30dp"
        android:paddingTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id = "@+id/foodDiary"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Food Diary"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id = "@+id/newEntry"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="New Entry"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/foodDiary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id = "@+id/onlineRes"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Online Resource"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/newEntry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>